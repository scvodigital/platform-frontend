{
  "name": "@scvo/frontend",
  "version": "0.0.1",
  "description": "The App Engine service that runs the SCVO=>Router",
  "main": "build/index.js",
  "engines": {
    "node": ">=6.11.3"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cleanup": "rm -rf ./build/**",
    "json2": "json-inc ./db/json2/**/*.json2 ./db/json; json-inc ./db/db.json2 ./db",
    "copy": "cp ./db/db.json ./build/db.json; cp -r ./assets ./build/assets",
    "sass": "node-sass ./build/assets/css -o build/assets/css",
    "upgrade-router": "yarn add -E @scvo/router @scvo/router-task-elasticsearch @scvo/router-destination-handlebars",
    "build": "npm run cleanup; npm run compile; npm run json2; npm run copy; npm run sass",
    "start": "npm run compile; node build/index.js",
    "dev": "npm run build; devmode=true node build/index.js",
    "dev-router": "npm run router; npm run dev",
    "deploy-dispatch": "gcloud app deploy dispatch.yaml --quiet",
    "clear-cache": "curl -s https://scvo.org.uk/reload-sites",
    "deploy-db": "npm run build; firebase database:set -y /app-engine ./db/db.json; npm run clear-cache",
    "deploy-app": "npm run build; npm run deploy-dispatch; gcloud beta app deploy --quiet; npm run deploy-db",
    "router": "cd ../router && npm run local && cd ../frontend && npm run l-router && npm run l-elastic && npm run l-handlebars && npm run l-redirect",
    "l-router": "npm link @scvo/router",
    "l-elastic": "npm link @scvo/router-task-elasticsearch",
    "l-handlebars": "npm link @scvo/router-destination-handlebars",
    "l-redirect": "npm link @scvo/router-destination-redirect",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "author": "Matthew Wilkes (https://scvo.org.uk)",
  "license": "GPL-3.0",
  "dependencies": {
    "@firebase/app": "^0.1.10",
    "@firebase/app-types": "^0.1.2",
    "@firebase/database": "^0.1.11",
    "@firebase/database-types": "^0.1.2",
    "@scvo/router": "1.1.7",
    "@scvo/router-destination-handlebars": "0.0.11",
    "@scvo/router-destination-redirect": "0.0.7",
    "@scvo/router-task-elasticsearch": "0.0.11",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.1",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "dot-object": "^1.7.0",
    "express": "^4.16.2",
    "firebase-admin": "^5.9.0",
    "livereload": "^0.7.0",
    "nsfw": "^1.0.16",
    "pdfmake": "^0.1.36",
    "string": "^3.3.3"
  },
  "devDependencies": {
    "@scvo/json-inc": "0.0.5",
    "@types/body-parser": "^1.16.8",
    "@types/chalk": "^2.2.0",
    "@types/compression": "^0.0.35",
    "@types/cors": "^2.8.3",
    "@types/dot-object": "^1.5.0",
    "@types/elasticsearch": "^5.0.22",
    "@types/express": "^4.11.1",
    "@types/q": "^1.0.7",
    "@types/request": "^2.47.0",
    "@types/string": "^0.0.29",
    "gts": "^0.5.4",
    "node-sass": "^4.7.2",
    "typescript": "~2.6.1"
  }
}
