{
  "name": "main_search",
  "pattern": "/search",
  "tasks": [
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6",
          "log": "debug"
        },
        "queryTemplates": {
          "index": "web-content-production",
          "type": "scvo-cms-page,scvo-cms-post,scvo-staff,scvo-member,cjs-job,charter-signatory-digitalparticipation,charter-signatory-humanrights,charter-signatory-europe,goodmoves-job,funding-scotland-fund,goodhq-organisation,goodhq-post,scvo-document-evidence,scvo-event,scvo-grant-charter,oscr-charity,tfn-news-post,tfn-blog-post,tfn-poll,tfn-event,tfn-list,tfn-feature",
          "template": ">context.metaData.handlebars.queries.main_search_search"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "splash",
            "index": "web-content-production",
            "type": "scvo-cms-media",
            "template": ">context.metaData.handlebars.queries.pages_splash"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.main_search_search-head-tags",
              "body": ">context.metaData.handlebars.templates.main_search_search",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}