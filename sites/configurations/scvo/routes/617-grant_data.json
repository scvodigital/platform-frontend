{
  "name": "grant_data",
  "pattern": "/transparency-open-data/data.json",
  "tasks": [
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            {
              "in": [
                "view=json",
                {
                  "var": "request.fullUrl"
                }
              ]
            },
            "data"
          ]
        },
        "output": "body",
        "layouts": {
          "data": {
            "layout": ">context.metaData.handlebars.layouts.json",
            "parts": {
              "content": ">context.metaData.handlebars.templates.grants_data"
            },
            "contentType": "application/json"
          }
        }
      }
    }
  ]
}