<h2 class="mdc-card__title mdc-card__title--large">Search vacancies</h2>
<form action="/jobs/community-jobs-scotland/vacancies/{{request.params.phase}}" method="GET" [searchroute]="'cjs_job_search'" data-auto-search="false">
  <div class="mdc-text-field mdc-text-field--box mdc-text-field--with-leading-icon" data-mdc-auto-init="MDCTextField">
    <span class="far fa-search mdc-text-field__icon" tabindex="0" role="button"></span>
    <input type="text" class="mdc-text-field__input mdc-text-field--fullwidth" name="q" id="keywords" data-lpignore="true" placeholder="" value="{{request.params.query.q}}">
    <label class="mdc-floating-label mdc-floating-label--float-above" for="q">Keywords</label>
  </div>
  <div class="mdc-text-field mdc-text-field--box mdc-text-field--with-leading-icon" data-mdc-auto-init="MDCTextField">
    <span class="far fa-hashtag mdc-text-field__icon" tabindex="0" role="button"></span>
    <input type="text" class="mdc-text-field__input mdc-text-field--fullwidth" name="job_number" id="job_number" data-lpignore="true" placeholder="" value="{{request.params.query.job_number}}">
    <label class="mdc-floating-label mdc-floating-label--float-above" for="job_number">Job number</label>
  </div>
  <div class="mdc-text-field mdc-text-field--box mdc-text-field--with-leading-icon" data-mdc-auto-init="MDCTextField">
    <span class="far fa-map-marker-alt mdc-text-field__icon" tabindex="0" role="button"></span>
    <input type="text" id="location" name="location" class="mdc-text-field__input mdc-text-field--fullwidth" value="{{request.params.query.location}}" placeholder="" data-lpignore="true" data-location-options='
      {
        "types": ["(regions)"],
        "componentRestrictions": {
          "country": "gb"
        }
      }' data-location-lat="[name='lat']" data-location-lng="[name='lng']">
    <label class="mdc-floating-label mdc-floating-label--float-above" for="location">
      Location
    </label>
    <div class="mdc-line-ripple"></div>
  </div>
  <div class="mdc-form-field mdc-select mdc-select--box" data-mdc-auto-init="MDCSelect">
    <select class="mdc-select__native-control" id="distance" name="distance">
      <option value="8046.72"{{#compare request.params.query.distance "8046.72"}} selected{{/compare}}>5 miles</option>
      <option value="16093.44"{{#compare request.params.query.distance "16093.44"}} selected{{/compare}}>10 miles</option>
      <option value="40233.6"{{#compare request.params.query.distance "40233.6"}} selected{{/compare}}>25 miles</option>
      <option value="80467.2"{{#compare request.params.query.distance "80467.2"}} selected{{/compare}}>50 miles</option>
      <option value=""{{#compare request.params.query.distance ""}} selected{{/compare}}>no limit</option>
    </select>
    <label class="mdc-floating-label mdc-floating-label--float-above" for="distance">
      Within
    </label>
  </div>

  {{#if request.params.query.location ~}}
  <input type="hidden" name="lat" value="{{request.params.query.lat}}" id="lat">
  <input type="hidden" name="lng" value="{{request.params.query.lng}}" id="lng">
  {{/if ~}}

