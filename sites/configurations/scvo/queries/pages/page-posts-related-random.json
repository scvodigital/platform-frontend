{
  "size": 4,
  "_source": [
    "slug",
    "title",
    "rendered.scvo_gist"
  ],
  "query": {
    "function_score": {
      "functions": [
        {
          "filter": {
            "more_like_this" : {
              "fields" : ["text_bag"],
              "like" : "{{data.primaryResponse.hits.hits.[0]._source.text_bag_boost}}",
              "min_term_freq" : 1,
              "max_query_terms" : 12
            }
          },
          "random_score": {},
          "weight": 4
        },
        {
          "filter": {
            "terms": {
              "categories_id": [
                {{join data.primaryResponse.hits.hits.[0]._source.categories_id}}
              ]
            }
          },
          "weight": 1
        },
        {
          "filter": {
            "term": {
              "_type": "scvo-cms-post"
            }
          },
          "weight": 2,
          "gauss": {
            "publish_on": {
              "scale": "60d",
              "decay": 0.1
            }
          }
        }
      ],
      "score_mode": "sum"
    }
  }
}
