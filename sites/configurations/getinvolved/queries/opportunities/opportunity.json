    "sunday_morning"
  ],
  "query": {
    "bool": {
      "filter": [
        {{>queries_opportunity_common_filters request.params.query}}
      ],
      "must": [
        {
          "term": {
            {{#if (includes request.params.slug "-") ~}}
            "slug": "{{request.params.slug}}"
            {{else}}
            "Id": "{{request.params.slug}}"
            {{/if ~}}
          }
        }
      ]
    }
  }
}
