{
  "size": 1,
  "_source": [
    "Id",
    "slug",
    "charity_number",
    "title",
    "alias",
    "description",
    "goodhq_organisation",
    "geo_organisation_coords",
    "postcode",
    "has_logo",
    "logo_url",
    "facebook",
    "facebook_url",
    "twitter",
    "twitter_url",
    "linkedin",
    "linkedin_url",
    "website",
    "website_url",
    "rendered.json_ld",
    "rendered.fundingscotland_charity_info"
  ],
  "query": {
    "bool": {
      "filter": [
        {{>queries_funder_common_filters @root.request.params.query}}
      ],
      "must": [
        {
          "term": {
            "slug": "{{request.params.slug}}"
          }
        }
      ]
    }
  }
}