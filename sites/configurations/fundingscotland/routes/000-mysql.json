{
  "name": "mysql",
  "pattern": "/mysql",
  "tasks": [
    {
      "name": "auth",
      "taskModule": "firebaseAuth",
      "config": {
        "tokenPath": "request.cookies.fs_token",
        "appName": "scvo",
        "noTokenRoute": "four_oh_four",
        "notAuthenticatedRoute": "four_oh_four"
      }
    },
    {
      "name": "mysql_test",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "emails": "SELECT * FROM recipientEmails_1 WHERE email IN ('calum.macuisdean@gmail.com', '{{data.auth.email}}') AND id = 'goodmoves-weekly';"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            {
              "in": [
                "view=json",
                {
                  "var": "request.fullUrl"
                }
              ]
            },
            "data"
          ]
        },
        "output": "body",
        "layouts": {
          "data": {
            "layout": ">context.metaData.handlebars.layouts.data",
            "parts": {
              "content": "{{{stringify data.search_query}}}"
            },
            "contentType": "application/json"
          }
        }
      }
    }
  ]
}