{{> account_sign_out_loader message="Please sign in to access this page&hellip;"}}
<script>
  document.addEventListener("DOMContentLoaded", function(event) {
    window.setTimeout(function() {
      fundingscotland.app.auth().signOut().then(function() {
        window.location.href = '/';
        fundingscotland.setCookie('fs_token');
        fundingscotland.setCookie('fs_cookie');
      }).catch(function(err) {
        console.error('Error logging out:', err);
      });
    }, 1000);
  });
</script>