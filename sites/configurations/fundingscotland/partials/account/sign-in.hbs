      window.location.href = '/';
    }, 100);
  });
</script>
{{else}}
<form id="sign-in-form" method="POST" class="sign-in-form search-form mdc-elevation--z5">
  <div class="mdc-card">
    <!-- <div class="mdc-card__info--fund">
      <div class="mdc-card__info--fund-title mdc-typography--headline4 x-padding">
        {{#if @root.request.params.query.reauth}}
          Reauthenticate
        {{else}}
          Sign in
        {{/if}}
      </div>
      {{#if @root.request.params.query.reauth}}
