<div class="mdc-card full" data-fund-id="{{Id}}">
  {{#if funder_organisation.has_logo ~}}
  <div class="mdc-card__media mdc-card__media--funder pull-right hide-sm">
    <a href="/funder/{{funder_organisation.slug}}{{@root.request.url.search}}">
      <img src="{{funder_organisation.logo_url}}" alt="{{funder_organisation.name}}" />
    </a>
  </div>
  {{/if ~}}
  <h2 class="mdc-card__info--fund-title mdc-typography--headline5">
    <a href="/fund/{{slug}}{{@root.request.url.search}}">
      <span class="hover-underline">{{title}}</span>
    </a>
  </h2>
  <ul class="fa-ul funder">
    <li class="mdc-card__info--fund-funder mdc-typography--body1">
      <span class="fa-li"><span class="far fa-building fa-fw" title="Funder"></span></span>
      <a href="/funder/{{funder_organisation.slug}}{{@root.request.url.search}}">{{funder_organisation.name}}</a>
    </li>
  </ul>
  <ul class="fa-ul first">
    {{#if (length (arrayify geographical_areas_funded)) ~}}
      <li class="mdc-typography--body1 mdc-chip-set">
        <span class="fa-li"><span class="far fa-map-marker-alt fa-fw" title="Geographical areas funded"></span></span>
        {{#each (arrayify geographical_areas_funded) ~}}
          <a href="/search?geographical_areas_funded={{lookup ../geographical_areas_funded_slugs @index}}" class="mdc-chip">
            {{{this}}}
          </a>
        {{/each ~}}
      </li>
    {{/if ~}}
    {{#if (length (arrayify activities)) ~}}
      <li class="mdc-typography--body1 mdc-chip-set">
        <span class="fa-li"><span class="far fa-hands-helping fa-fw" title="Activities"></span></span>
        {{#each (arrayify activities) ~}}
          <a href="/search?activities={{lookup ../activities_slugs @index}}" class="mdc-chip">
            {{{this}}}
          </a>
        {{/each ~}}
      </li>
    {{/if ~}}
    {{#if (length (arrayify activities)) ~}}
      <li class="mdc-typography--body1 mdc-chip-set">
        <span class="fa-li"><span class="far fa-user-alt fa-fw" title="Beneficiaries"></span></span>
        {{#each (arrayify beneficiaries) ~}}
        <a href="/search?beneficiaries={{lookup ../beneficiaries_slugs @index}}" class="mdc-chip">
          {{{this}}}
        </a>
        {{/each ~}}
      </li>
    {{/if ~}}
  </ul>

  <hr class="mdc-list-divider" />

  {{#if description ~}}
  <h4 class="mdc-typography--headline6">Summary</h4>
  <div class="mdc-typography--body1">
    {{{description}}}
  </div>
  {{/if ~}}

  {{#if who_can_apply ~}}
  <h4 class="mdc-typography--headline6">Who can apply?</h4>
  <div class="mdc-typography--body1">
    {{{who_can_apply}}}
  </div>
  {{/if ~}}

  {{#if exclusions ~}}
  <h4 class="mdc-typography--headline6">Exclusions</h4>
  <div class="mdc-typography--body1">
    {{{exclusions}}}
  </div>
  {{/if ~}}

  {{#if when_to_apply ~}}
  <h4 class="mdc-typography--headline6">When to apply?</h4>
  <div class="mdc-typography--body1">
    {{{when_to_apply}}}
  </div>
  {{/if ~}}

  <h4 class="mdc-typography--headline6">Your notes</h4>
  <div class="fund-info-container">
    <div class="text-field-container user-notes">
      {{#if @root.data.auth ~}}
        <form action="/save-notes" method="POST" data-ajax-form="true" data-success-message="Notes saved" data-failure-message="Failed to save notes">
          <div>
            <textarea class="mdc-text-field__input" data-simple-mde="true" name="notes">{{getProperty @root.data.notes Id}}</textarea>
            <input type="hidden" name="id" value="{{Id}}">
          </div>
          <div class="save-button-block">
            <button type="submit" class="mdc-button mdc-button--raised">
              <span class="far fa-save mdc-list-item__graphic" aria-hidden="true"></span>
              Save notes
            </button>
          </div>
        </form>
      {{else}}
        <div class="detailed-info">
          <p class="mdc-typography--body1">
            If you <a href="/sign-up">sign up</a> you'll be able to save notes on active jobs.
          </p>
        </div>
      {{/if ~}}
    </div>
    <div class="mdc-card__actions">
      <div class="mdc-card__action-icons mdc-chip-set pull-right">
        <div class="mdc-chip" onclick="goodmoves.toggleShortlistItem('{{Id}}');" data-mdc-auto-init="MDCChip">
          <span class="far fa-star mdc-chip__icon mdc-chip__icon--leading" aria-hidden="true"></span>
          <div class="mdc-chip__checkmark">
            <svg class="mdc-chip__checkmark-svg" viewBox="-2 -3 30 30">
              <path class="mdc-chip__checkmark-path" fill="none" stroke="#244817" d="M1.73,12.91 8.1,19.28 22.79,4.59"/>
            </svg>
          </div>
          <div class="mdc-chip__text noselect">Shortlist</div>
        </div>
      </div>
    </div>
  </div>
</div>