{{{rendered.fund_status}}}
<div class="mdc-card__info--fund-row">
  <div class="mdc-card__info--fund">
    {{#if funder_organisation.has_logo ~}}
    <div class="mdc-card__media mdc-card__media--funder pull-right hide-sm">
      <a href="/funder/{{funder_organisation.slug}}{{@root.request.url.search}}">
        <img src="{{funder_organisation.logo_url}}" alt="{{funder_organisation.name}}" />
      </a>
    </div>
    {{/if ~}}
    <h2 class="mdc-card__info--fund-title mdc-typography--headline5">
      <a href="/fund/{{slug}}{{@root.request.url.search}}">
        <span class="hover-underline">{{title}}</span>
      </a>
    </h2>
    <ul class="fa-ul funder">
      <li class="mdc-card__info--fund-funder mdc-typography--body1">
        <span class="fa-li"><span class="far fa-building fa-fw" title="funder"></span></span>
        <a href="/funder/{{funder_organisation.slug}}{{@root.request.url.search}}">{{funder_organisation.name}}</a>
      </li>
    </ul>
    <ul class="fa-ul first">
      {{#if geographical_areas_funded ~}}
      <li class="mdc-card__info--fund-location mdc-typography--body1">
        <span class="fa-li"><span class="far fa-map-marker-alt fa-fw" title="Areas funded"></span></span>
        {{#each geographical_areas_funded ~}}
          {{{this}}}{{#unless @last}}, {{/unless}}
        {{/each}}
      </li>
      {{/if ~}}
      {{#if fund_status ~}}
      <li class="mdc-card__info--fund-status mdc-typography--body1">
        <span class="fa-li"><span class="far fa-clock fa-fw" title="Status"></span></span>
        {{{fund_status}}}
      </li>
      {{/if ~}}
    </ul>
    <ul class="fa-ul last">
      {{#if type_of_funding ~}}
      <li class="mdc-card__info--fund-salary mdc-typography--body1">
        <span class="fa-li"><span class="far fa-calculator fa-fw" title="Type of funding"></span></span>
        {{#each type_of_funding ~}}
          {{{this}}}{{#unless @last}}, {{/unless}}
        {{/each}}
      </li>
      {{/if ~}}
      {{#if type_of_cost ~}}
      <li class="mdc-card__info--fund-closing mdc-typography--body1">
        <span class="fa-li"><span class="far fa-calendar-alt fa-fw" title="Type of cost"></span></span>
        {{#each type_of_cost ~}}
          {{{this}}}{{#unless @last}}, {{/unless}}
        {{/each}}
      </li>
      {{/if ~}}
    </ul>
  </div>
</div>
