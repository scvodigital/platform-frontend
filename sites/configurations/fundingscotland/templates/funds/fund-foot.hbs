<script>
{{#if data.auth}}
var mdeEditors = [];
$(document).ready(function() {
  $('textarea[data-simple-mde]').each(function(i, o) {
    var mdeEditor = new SimpleMDE({
      element: o,
      forceSync: true,
      toolbar: ["heading-1", "heading-2", "bold", "italic", "|", "unordered-list", "ordered-list", "link"]
    });
    o.mde = mdeEditor;
    mdeEditors.push(mdeEditor);
  });
});
{{/if}}
</script>