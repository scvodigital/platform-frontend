{
  "name": "webhook",
  "pattern": "/webhook",
  "acceptedVerbs": ["POST", "GET"],
  "debug": true,
  "tasks": [
    {
      "name": "notifications",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "webhook-log": ">context.metaData.handlebars.queries.webhook-log"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "{ \"data\": {{{stringify @root.data}}}, \"errors\": {{{stringify @root.errors}}} }",
        "parseJson": true
      }
    }
  ]
}
