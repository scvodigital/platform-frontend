<body class="{{#if request.params.path}}{{replace request.params.path '_' ' '}}{{else}}home{{/if}}">
  <charter-site>
    <div class="mdc-typography">
      <header class="mdc-toolbar">
        <div class="mdc-toolbar__row">
          <div class="container-fluid">
            <section class="mdc-toolbar__section mdc-toolbar__section--align-start">
              <span class="mdc-toolbar__title catalog-title">
                <a href="/" class="brand-logo" title="The Scotland Declaration on Human Rights">
                  <img src="https://storage.googleapis.com/scvo-assets/scvo-frontend/assets/images/logos/sdhr-mobile.png" class="brand-logo-mobile" />
                  <img src="https://storage.googleapis.com/scvo-assets/scvo-frontend/assets/images/logos/sdhr-desktop.png" class="brand-logo-desktop" />
                </a>
              </span>
            </section>
            <section class="mdc-toolbar__section mdc-toolbar__section--align-end">
              <nav id="main-tab-bar" class="mdc-tab-bar" [menu]="'main'" [menulinkselector]="''" [menulabelselector]="'span.mdc-tab--label'" [menuactiveclass]="'active'">
                {{#each context.metaData.menus.main}}
                <a class="mdc-tab{{#if (regexMatch ../request.url.pathname route "gi")}} mdc-tab--active{{/if}}" href="{{path}}"><span class="mdc-tab--label">{{{label}}}</span></a>
                {{/each}}
              </nav>
            </section>
            <section class="mdc-toolbar__section mdc-toolbar__section--align-end mdc-toolbar__section--shrink-to-fit hide-lg">
              <button class="mdc-top-app-bar__navigation-icon" data-drawer-target="#mobile-menu">
                <span class="far fa-fw fa-2x fa-bars"></span>
              </button>
            </section>
          </div>
        </div>
      </header>

      <aside class="mdc-drawer mdc-drawer--temporary" id="mobile-menu" data-mdc-auto-init="MDCTemporaryDrawer">
        <nav class="mdc-drawer__drawer">
          <header class="mdc-drawer__header">
            <div class="mdc-temporary-drawer__header-content mdc-theme--text-primary-on-primary">
              <img src="https://storage.googleapis.com/scvo-assets/scvo-frontend/assets/images/logos/sdhr-mobile.png" class="brand-logo-mobile" />
            </div>
          </header>
          <nav class="mdc-drawer__content mdc-list">
            {{#each @root.context.metaData.menus.main ~}}
            <a class="mdc-list-item{{#if (regexMatch @root.request.url.pathname route "gi")}} mdc-list-item--activated{{/if}}" href="{{stripTrailingSlash path}}">
              {{#if icon ~}}
              <span class="far fa-{{icon}} mdc-list-item__graphic" aria-hidden="true"></span>
              {{/if ~}}
              {{{label}}}
            </a>
            {{/each ~}}
          </nav>
        </nav>
      </aside>

      <main>
        <div class="container-fluid">
          {{{layoutParts.body}}}
        </div>
      </main>

      <footer>
        <div class="footer-main">
          <div class="container-fluid">
            <div class="mdc-layout-grid">
              <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-phone mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-9-desktop">
                  <h3>About</h3>
                  <p>
                    The <strong>Scotland Declaration on Human Rights</strong> is run by the
                    <a href="https://scvo.org">Scottish Council for Voluntary Organisations</a>
                    with support from <a href="https://hrcscotland.org">Human Rights Consortium Scotland</a>, <a href="http://www.scottishhumanrights.com">Scottish Human Rights Commission</a> and the <a href="https://www.equalityhumanrights.com">Equality and Human Rights Commission</a>
                  </p>
                  <a href="https://www.equalityhumanrights.com" class="brand-logo" title="Equality Human Rights Scotland">
                    <img src="https://storage.googleapis.com/human-rights-declaration/ehrc-logo.svg" />
                  </a>
                  <a href="http://www.scottishhumanrights.com" class="brand-logo" title="Scottish Human Rights Commission">
                    <img src="https://storage.googleapis.com/human-rights-declaration/shrc-logo.svg" style="max-width:none; height:44px; filter: brightness(0) invert(1);" />
                  </a>
                  <a href="https://hrcscotland.org" class="brand-logo" title="Human Rights Consortium Scotland">
                    <img src="https://storage.googleapis.com/human-rights-declaration/hrcs-logo.jpg" style="filter: grayscale(100%) invert(1); mix-blend-mode: screen;" />
                  </a>
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-phone mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-3-desktop">
                  <h3>Help</h3>
                  <ul class="mdc-list">
                    <li class="mdc-list-item">
                      <a href="/accessibility">Accessibility</a>
                    </li>
                    <li class="mdc-list-item">
                      <a href="/privacy">Privacy</a>
                    </li>
                    <li class="mdc-list-item">
                      <a href="/cookies">Cookies</a>
                    </li>
                    <li class="mdc-list-item">
                      <a href="/terms">Terms &amp; conditions</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="footer-copyright">
          <div class="container-fluid">
            <div class="mdc-layout-grid">
              <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-phone mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-9-desktop">
                  <p>
                    &copy; {{momentFormat (moment) "YYYY"}}. The Scottish Council for Voluntary Organisations (SCVO) is a Scottish Charitable Incorporated Organisation. Charity registered in Scotland <a href="https://www.oscr.org.uk/about-charities/search-the-register/charity-details?number=SC003558">SC003558</a>. Registered office Mansfield Traquair Centre, 15 Mansfield Place, Edinburgh EH3 6BB.
                  </p>
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-phone mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-3-desktop">
                  <a href="https://scvo.org" title="Scottish Council for Voluntary Organisations">
                    <img src="https://storage.googleapis.com/scvo-assets/scvo-frontend/assets/images/logos/scvo.png" alt="Scottish Council for Voluntary Organisations" class="logo scvo" />
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </charter-site>
