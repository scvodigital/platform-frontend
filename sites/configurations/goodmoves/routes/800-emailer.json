{
  "name": "emailer",
  "pattern": "/emailer",
  "debug": true,
  "metaData": {
    "campaign": "goodmoves-saved-searches",
    "pageSize": "5",
    "from": "no-reply@goodmoves.com",
    "subject": "Goodmoves job alerts"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    {
      "name": "notifications",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "subscriptions": "CALL _getPage({{{mysqlEscape @root.route.metaData.campaign}}}, {{@root.route.metaData.pageSize}});"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "generate_es_task",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "parseJson": true,
        "template": ">context.metaData.handlebars.templates.vacancies_dynamic-es-task"
      }
    },
    "data.generate_es_task",
    {
      "name": "send_emails",
      "taskModule": "mailgun",
      "renderer": "handlebars",
      "config": {
        "connectionName": "goodmoves-saved-searches",
        "template": ">context.metaData.handlebars.templates.vacancies_email"
      }
    },
    {
      "name": "reset",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "reset": "CALL _resetProcessing({{{mysqlEscape @root.route.metaData.campaign}}});"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "{{{stringify @root.data.send_emails}}}",
        "parseJson": false
      }
    }
  ]
}
