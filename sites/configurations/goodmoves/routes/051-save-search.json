{
  "name": "save-search",
  "pattern": "/save-search",
  "acceptedVerbs": "POST",
  "debug": true,
  "tasks": [
    "metaData.commonTasks.authRequired",
    {
      "name": "notifications",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "create_or_replace_subscriber": ">context.metaData.handlebars.queries.notifications_create-replace-subscriber",
          "add_saved_search": ">context.metaData.handlebars.queries.notifications_add-saved-search",
          "add_saved_search_parameters": ">context.metaData.handlebars.queries.notifications_add-saved-search-parameters"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "searchUrl",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/search{{{request.url.search}}}"
      }
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": ">data.searchUrl"
      }
    }
  ]
}
