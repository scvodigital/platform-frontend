{
  "name": "save-search",
  "pattern": "/save-search",
  "tasks": [
    {
      "name": "auth",
      "taskModule": "firebaseAuth",
      "config": {
        "tokenPath": "request.cookies.gm_token",
        "appName": "scvo",
        "noTokenRoute": "four_oh_four",
        "notAuthenticatedRoute": "four_oh_four"
      }
    },
    {
      "name": "notifications",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "create_or_replace_subscriber": ">context.metaData.handlebars.queries.notifications_create-replace-subscriber",
          "add_saved_search": ">context.metaData.handlebars.queries.notifications_add-saved-search",
          "add_saved_search_parameters": ">context.metaData.handlebars.queries.notifications_add-saved-search-parameters"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_page-head-tags",
              "body": ">context.metaData.handlebars.templates.pages_login"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}
