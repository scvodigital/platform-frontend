{
  "size": 100,
  "_source": [
    "Id",
    "slug",
    "top_job",
    "description_short",
    "title",
    "geo_vacancy_coords",
    "location",
    "salary",
    "role_status_list",
    "active",
    "closing_date",
    "start_at",
    "end_at",
    "organisation.slug",
    "organisation.name",
    "organisation.has_logo",
    "organisation.logo_url"
  ],
  "query": {
    "bool": {
      "filter": [
        {{>queries_vacancy_common_filters_closed request.params.query}},
        {{>queries_common_country request.params.query}}
      ],
      "must": [
        {
          "terms": {
            "Id": {{{stringify (map data.shortlist.items (getProp "id"))}}}
          }
        }
      ]
    }
  },
  "sort": {
    "closing_date": "desc"
  }
}
