{
  "size": 10,
  "_source": [
    "Id",
    "slug",
    "vacancy_status",
    "rendered.vacancy_status",
    "top_job",
    "description_short",
    "title",
    "geo_vacancy_coords",
    "location",
    "salary",
    "role_status_list",
    "closing_date",
    "organisation.slug",
    "organisation.name",
    "organisation.has_logo",
    "organisation.logo_url"
  ],
  "query": {
    "bool": {
      "filter": [
        {{>queries_vacancy_common_filters request.params.query}}
      ]
      {{#ifAll @root.data.auth @root.data.saved_searches.items.[0]}}
      ,"should": [
        {{#each @root.data.saved_searches.items}}
          {{#with (querystring querystring)}}
          {
            "bool": {
              "filter": [
                {{>queries_vacancy_search_filters request.params.query}}
              ],
              "must": [
                {{>queries_vacancy_search_must request.params.query}}
              ]
            }
          }
          {{/with}}
          {{#unless @last}},{{/unless}}
        {{/each}}
      ]
      {{/ifAll}}
    }
  },
  "sort": {
    "start_at": "desc"
  }
}
