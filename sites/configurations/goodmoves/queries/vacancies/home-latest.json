{
  "size": 10,
  "_source": [
    "Id",
    "slug",
    "vacancy_status",
    "rendered.vacancy_status",
    "top_job",
    "description_short",
    "title",
    "geo_vacancy_coords",
    "location",
    "salary",
    "role_status_list",
    "closing_date",
    "organisation.slug",
    "organisation.name",
    "organisation.has_logo",
    "organisation.logo_url"
  ],
  "query": {
    "bool": {
      "filter": [
        {{>elasticsearch_term field="country_iso3" term="GBR"}},
        {{>elasticsearch_term field="vacancy_status" term="vacancy-open"}}
      ],
      {{#ifAll @root.data.auth @root.data.saved_searches.items.[0]}}
      "should": [
        {{#each @root.data.saved_searches.items}}
          {{#with (querystring querystring)}}
          {
            "bool": {
              "filter": [
                {{>elasticsearch_search_filters querystring}}
              ],
              "must": [
                {{>elasticsearch_search_must querystring}}
              ]
            }
          }
          {{/with}}
          {{#unless @last}},{{/unless}}
        {{/each}} 
      ]
      {{/ifAll}}
    }
  },
  "sort": {
    "start_at": "desc"
  }
}
