<div class="mdc-card goodmoves-vacancy full{{if top_job " top-job"}}" data-vacancy-id="{{Id}}">
  {{> vacancy_key_info}}
  <hr class="mdc-list-divider" />
  <div class="vacancy-info-container">
    <div id="vacancy-tab-bar" class="mdc-tab-bar" role="tablist">
      <a class="mdc-tab mdc-tab--active" role="tab" aria-controls="panel-1">
        <span class="far fa-list-ul fa-fw" aria-hidden="true"></span>
        <span class="label">Information</span>
      </a>
      <a class="mdc-tab" role="tab" aria-controls="panel-2">
        <span class="far fa-map-marker-alt fa-fw" aria-hidden="true"></span>
        <span class="label">Location</span>
      </a>
      <a class="mdc-tab" role="tab" aria-controls="notes">
        <span class="far fa-edit fa-fw" aria-hidden="true"></span>
        <span class="label">Your notes</span>
      </a>
      <span class="mdc-tab-bar__indicator"></span>
    </div>
    <hr class="mdc-list-divider" />
    <div class="panels" for="vacancy-tab-bar">
      <div class="panel panel--active mdc-card--full-content" role="tabpanel" aria-hidden="false" id="panel-1">
        <div class="key-info-extra">
          <ul class="fa-ul">
            {{#if start_at ~}}
            <li class="mdc-card__info--vacancy-from mdc-typography--body1">
              <span class="fa-li"><span class="far fa-calendar-plus fa-fw" title="Start date"></span></span>
              Advertised from {{momentFormat (moment start_at "x") "Do MMMM YYYY"}}
            </li>
            {{/if ~}}
            {{#if salary_info ~}}
            <li class="mdc-card__info--vacancy-location mdc-typography--body1">
              <span class="fa-li"><span class="far fa-info-circle fa-fw" title="Salary information"></span></span>
              {{salary_info}}
            </li>
            {{/if ~}}
            {{#if benefits ~}}
            <li class="mdc-card__info--vacancy-salary mdc-typography--body1">
              <span class="fa-li"><span class="far fa-smile fa-fw" title="Benefits"></span></span>
              {{{benefits}}}
            </li>
            {{/if ~}}
            <!-- {{!--
            {{#ifAny sectors roles ~}}
            <li class="mdc-card__info--vacancy-categories mdc-typography--body1">
              <span class="fa-li"><span class="far fa-tags fa-fw" title="Roles"></span></span>
              {{#each sectors ~}}
              <a href="/search?sector={{urlencode this}}" class="mdc-chip">
                {{this}}
              </a>
              {{/each ~}}
              {{#each roles ~}}
              <a href="/search?role={{urlencode this}}" class="mdc-chip">
                {{this}}
              </a>
              {{/each ~}}
            </li>
            {{/ifAny ~}}
            --}} -->
            {{#if reference_number ~}}
            <li class="mdc-card__info--vacancy-reference mdc-typography--body1">
              <span class="fa-li"><span class="far fa-hashtag fa-fw" title="Reference"></span></span>
              {{reference_number}}
            </li>
            {{/if ~}}
            <!-- {{#if closing_date ~}}
            <li class="mdc-card__info--vacancy-closing mdc-typography--body1">
              <span class="fa-li"><span class="far fa-calendar-alt fa-fw" title="Closing date"></span></span>
              {{#compare vacancy_status "===" "vacancy-closed" ~}}
              Closed
              {{else}}
              Closing
              {{/compare ~}}
              on
              {{momentFormat (moment closing_date "x") "dddd \t\h\e Do \o\f MMMM YYYY \a\t h:mm a"}}
            </li>
            {{/if ~}} -->
          </ul>
        </div>
        <div class="detailed-info">
          {{#if description ~}}
          <h4 class="mdc-typography--headline6">Role</h4>
          <div class="mdc-typography--body1">
            {{{description}}}
          </div>
          {{/if ~}}

          {{#if application_notes ~}}
          <h4 class="mdc-typography--headline6">Application notes</h4>
          <div class="mdc-typography--body1">
            {{{application_notes}}}
          </div>
          {{/if ~}}

          {{{rendered.goodmoves_downloads}}}

          {{{rendered.goodmoves_sponsor_logos}}}
        </div>
      </div>
      <div class="panel mdc-card--full-content" role="tabpanel" aria-hidden="true" id="panel-2">
        {{!--
        {{#ifAny organisation.profile organisation_website organisation_twitter organisation_facebook organisation_linkedin ~}}
        <div class="key-info-extra">
          {{#if organisation.profile ~}}
          <h4 class="mdc-typography--headline6">Organisation profile</h4>
          <div class="mdc-typography--body1">
            {{{organisation.profile}}}
          </div>
          {{/if ~}}
          <ul class="fa-ul">
            {{#if organisation_website ~}}
            {{#compare organisation_website "!==" null ~}}
            {{#compare organisation_website "!==" "http://" ~}}
            <li class="mdc-card__info--vacancy-website mdc-typography--body1">
              <span class="fa-li"><span class="far fa-link fa-fw" title="Website"></span></span>
              <a href="{{organisation_website_url}}">
                {{organisation_website}}
              </a>
            </li>
            {{/compare ~}}
            {{/compare ~}}
            {{/if ~}}
            {{#if organisation_twitter ~}}
            {{#compare organisation_twitter "!==" null ~}}
            {{#compare organisation_twitter "!==" "http://" ~}}
            <li class="mdc-card__info--vacancy-twitter mdc-typography--body1">
              <span class="fa-li"><span class="fab fa-twitter fa-fw" title="Twitter"></span></span>
              <a href="{{organisation_twitter_url}}">
                {{organisation_twitter}}
              </a>
            </li>
            {{/compare ~}}
            {{/compare ~}}
            {{/if ~}}
            {{#if organisation_facebook ~}}
            {{#compare organisation.acebook "!==" null ~}}
            {{#compare organisation_facebook "!==" "http://" ~}}
            <li class="mdc-card__info--vacancy-facebook mdc-typography--body1">
              <span class="fa-li"><span class="fab fa-facebook fa-fw" title="Facebook"></span></span>
              <a href="{{organisation_facebook_url}}">
                {{organisation_facebook}}
              </a>
            </li>
            {{/compare ~}}
            {{/compare ~}}
            {{/if ~}}
            {{#if organisation_linkedin ~}}
            {{#compare organisation_linkedin "!==" null ~}}
            {{#compare organisation_linkedin "!==" "http://" ~}}
            <li class="mdc-card__info--vacancy-linkedin mdc-typography--body1">
              <span class="fa-li"><span class="fab fa-linkedin fa-fw" title="LinkedIn"></span></span>
              <a href="{{organisation_linkedin_url}}">
                {{organisation_linkedin}}
              </a>
            </li>
            {{/compare ~}}
            {{/compare ~}}
            {{/if ~}}
          </ul>
        </div>
        {{/ifAny ~}}
        --}}
        <div class="location-info">
          {{#compare (length geo_vacancy_coords) ">" 0 ~}}
            <div class="container-content container-map">
              <div id="map-vacancy" data-map-name="vacancyMap" data-map-options='{
                "center": {
                  "lat": {{geo_vacancy_coords.0.lat}},
                  "lng": {{geo_vacancy_coords.0.lon}}
                },
                "zoom": 13
              }'></div>
            </div>
            {{#each (arrayify geo_vacancy_coords) ~}}
              <marker style="display:none;" data-map="vacancyMap" data-lat="{{lat}}" data-lng="{{lon}}" data-title="{{../organisation.name}} - {{../title}}">
                <h3 class="mdc-typography--headline7">{{../organisation.name}}</h3>
                <p class="mdc-typography--body2">{{../title}}</p>
              </marker>
            {{/each ~}}
          {{else}}
            <div class="container-content v-margin-full">
              <p class="mdc-typography--body1">
                Area: {{{location}}}. Specific job location not provided.
              </p>
            </div>
          {{/compare ~}}
        </div>
      </div>
      <div class="panel mdc-card--full-content" role="tabpanel" aria-hidden="true" id="notes">
        <div class="text-field-container user-notes">
          {{#if @root.data.auth ~}}
            <form action="/save-notes" method="POST" data-ajax-form="true" data-success-message="Notes saved" data-failure-message="Failed to save notes">
              <div>
                <textarea class="mdc-text-field__input" data-simple-mde="true" name="notes">{{getProperty @root.data.notes Id}}</textarea>
                <input type="hidden" name="id" value="{{Id}}">
              </div>
              <div class="save-button-block">
                <button type="submit" class="mdc-button mdc-button--raised">
                  <span class="far fa-save mdc-list-item__graphic" aria-hidden="true"></span>
                  Save notes
                </button>
                <div class="mdc-typography--caption">
                  Any notes you write here are private on your account and are not shared with {{organisation.name}}
                </div>
              </div>
            </form>
          {{else}}
            <div class="detailed-info">
              <p class="mdc-typography--body1">
                If you <a href="/sign-up">sign up</a> you'll be able to save notes on active jobs.
              </p>
            </div>
          {{/if ~}}
        </div>
      </div>
    </div>
    {{> vacancy_actions slug=slug Id=Id action="organisation"}}
  </div>
</div>
