<div class="splash-image {{> header_splash}}">
    <div class="container-fluid">
        <ul class="breadcrumbs">
            <li><a href="/">Home</a></li>
            <li><a href="/services">Services</a></li>
            <li><a href="/services/digital">Digital</a></li>
            <li><a href="/services/digital/participation">Participation</a></li>
        </ul>

        <div class="mdc-layout-grid">
            {{#if primaryResponse.hits.hits.[0]._source.header_text}}
            <img src="{{primaryResponse.hits.hits.[0]._source.header_text}}" alt="{{primaryResponse.hits.hits.[0]._source.title}}" class="header-text" />
            {{else}}
            <h1 class="header-text">
                <span class="header-text-banner">
                    {{{primaryResponse.hits.hits.[0]._source.title}}}
                </span>
            </h1>
            {{/if}}
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="mdc-layout-grid">
        <div class="mdc-layout-grid__inner">
            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12 content library-content">
                {{#with supplimentaryResponses.page.hits.hits.[0]._source}}
                {{{rendered.full}}}
                {{/with}}

                <hr />

                <form [searchroute]="'grant_search'">
                    <div class="mdc-textfield mdc-textfield--upgraded" data-mdc-auto-init="MDCTextfield">
                        <input type="text" class="mdc-textfield__input" name="q" id="grant-digital-keywords" value="{{params.query.q}}">
                        <label class="mdc-textfield__label" for="grant-digital-keywords">Keywords</label>
                        <div class="mdc-textfield__bottom-line"></div>
                    </div>
                    <div class="mdc-form-field">
                        <select class="mdc-select" role="listbox" id="grant-digital-call" name="call">
                            <option value="" {{#if params.query.call}}{{else}}selected{{/if}}>All funding rounds</option>
                            {{#each supplimentaryResponses.types.aggregations.calls.buckets}}
                            <option value="{{slugify key}}" {{#compare ../params.query.call "===" (slugify key)}}selected{{/compare}}>{{key}} ({{doc_count}})</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="mdc-form-field">
                        <select class="mdc-select" role="listbox" id="grant-digital-tag" name="tag">
                            <option value="" {{#if params.query.tag}}{{else}}selected{{/if}}>All tags</option>
                            {{#each supplimentaryResponses.types.aggregations.tags.buckets}}
                            <option value="{{slugify key}}" {{#compare ../params.query.tag "===" (slugify key)}}selected{{/compare}}>{{key}} ({{doc_count}})</option>
                            {{/each}}
                        </select>
                    </div>
                    <button class="mdc-button mdc-button--raised" type="submit">
                        Search
                    </button>
                </form>

                <hr />

                <div class="mdc-layout-grid">
                    <div class="mdc-layout-grid__inner">
                        {{#each primaryResponse.hits.hits}}
                        <div class="mdc-layout-grid__cell mdc-layout-grid__cell">
                            {{{_source.rendered.scvo_card}}}
                        </div>
                        {{/each}}
                    </div>
                </div>

                {{> pagination paging=paging params=params}}
            </div>
        </div>
    </div>
</div>
