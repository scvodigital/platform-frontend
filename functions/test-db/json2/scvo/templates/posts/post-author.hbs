<div class="post-author">
    <div class="splash-image splash-image-{{supplimentaryResponses.author_profile.hits.hits.[0]._type}}" style="{{> header_splash_image}}">
        <div class="splash-overlay{{#if supplimentaryResponses.author_profile.hits.hits.[0]._source.hide_overlay}} splash-overlay-hidden{{/if}}">
            <div class="container-fluid">
                <div class="mdc-layout-grid">
                    <h1 class="header-text">
                        <span class="header-text-banner">
                            {{#if supplimentaryResponses.staff_profile.hits.hits.[0]}}
                            {{{supplimentaryResponses.staff_profile.hits.hits.[0]._source.rendered.scvo_header}}}
                            {{else}}
                            {{{supplimentaryResponses.author_profile.hits.hits.[0]._source.rendered.scvo_header}}}
                            {{/if}}
                        </span>
                    </h1>
                </div>
                {{> header_caption}}
            </div>
        </div>
    </div>
    <div class="container-fluid">
        {{#> handle_404}}
        {{> breadcrumbs_posts}}
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-8-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone content post-content">
                    {{#compare primaryResponse.hits.total ">" 0}}
                    {{#compare primaryResponse.hits.total ">" 10}}
                    {{> search_info}}
                    {{/compare}}
                    <ul class="supplimentary-list">
                        {{#each primaryResponse.hits.hits}}
                        {{{_source.rendered.list}}}
                        {{/each}}
                    </ul>
                    {{> pagination}}
                    {{else}}
                    <p>
                        No posts by this author could be loaded.
                    </p>
                    {{/compare}}
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone sidebar post-sidebar">
                    <div class="author_about">
                        {{#if supplimentaryResponses.staff_profile.hits.hits.[0]}}
                        {{{supplimentaryResponses.staff_profile.hits.hits.[0]._source.rendered.scvo_profile}}}
                        {{else}}
                        {{{primaryResponse.hits.hits.[0]._source.rendered.scvo_profile}}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        {{/handle_404}}
    </div>
</div>
