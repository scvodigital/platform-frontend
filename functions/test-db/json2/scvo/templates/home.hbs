<div class="splash-image hello" style="{{> header_splash_image}}">
    <div class="splash-overlay">
        <div class="container-fluid">
            <div class="mdc-layout-grid">
                <h1 class="header-text">
                    <span class="header-text-banner">
                        Hello,<br />
                        we're SCVO
                    </span>
                </h1>
                <p class="header-extra">
                    Championing Scotland's vibrant charities,<br />
                    voluntary organisations &amp; Social Enterprises
                </p>
                <p>
                    <a href="/about" class="mdc-button">Find out more</a>
                </p>
            </div>
        </div>
    </div>
</div>

<section class="featured-content">
    <div class="container-fluid">
        <form [searchroute]="'main_search'" class="search_form">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-11-desktop mdc-layout-grid__cell--span-10-tablet mdc-layout-grid__cell--span-9-phone">
                    <div class="mdc-textfield">
                        <input type="text" class="mdc-textfield__input white-text mdc-text-field searchRoute" placeholder="Search SCVO, Goodmoves, TFN, and more" id="q" name="q">
                    </div>
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-1-desktop mdc-layout-grid__cell--span-2-tablet mdc-layout-grid__cell--span-3-phone">
                    <button type="submit" class="mdc-toolbar__icon mdc-toolbar__search search-button-large" aria-label="Search" alt="Search">
                        <span class="fa fa-3x fa-search" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </form>
    </div>
    {{#each supplimentaryResponses.featured.hits.hits}}
    <div {{#if _source.header_background}}class="featured-background-image" style="background-image: url('{{_source.header_background}}');"{{else}}class="featured-text"{{/if}}>
        <div class="container-fluid">
            {{{_source.rendered.featured}}}
        </div>
    </div>
    {{/each}}
</section>

<section class="callout-image cta-content">
    <div class="container-fluid">
        <div class="cta-grid mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
                    <h2>
                        Find information on...
                    </h2>
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3 mdc-layout-grid__cell--span-12-tablet mdc-layout-grid__cell--span-12-phone">
                    <h3>
                        <a href="/setting-up-a-charity">
                            <span class="fal fa-book fa-fw fa-3x" aria-hidden="true"></span>
                            <span class="underline">Setting up an organisation</span>
                        </a>
                    </h3>
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3 mdc-layout-grid__cell--span-12-tablet mdc-layout-grid__cell--span-12-phone">
                    <h3>
                        <a href="/funding">
                            <span class="fal fa-money-bill fa-fw fa-3x" aria-hidden="true"></span>
                            <span class="underline">Funding for my project</span>
                        </a>
                    </h3>
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3 mdc-layout-grid__cell--span-12-tablet mdc-layout-grid__cell--span-12-phone">
                    <h3>
                        <a href="/events">
                            <span class="fal fa-graduation-cap fa-fw fa-3x" aria-hidden="true"></span>
                            <span class="underline">Training courses &amp; events</span>
                        </a>
                    </h3>
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3 mdc-layout-grid__cell--span-12-tablet mdc-layout-grid__cell--span-12-phone">
                    <h3>
                        <a href="/jobs">
                            <span class="fal fa-briefcase fa-fw fa-3x" aria-hidden="true"></span>
                            <span class="underline">Jobs in the sector</span>
                        </a>
                    </h3>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="latest-content">
    <div class="container-fluid">
        <div class="latest-grid mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-12-tablet mdc-layout-grid__cell--span-12-phone">
                    <h2>
                        Latest SCVO blog posts
                    </h2>
                    {{#each supplimentaryResponses.blogs_latest.hits.hits}}
                    {{{_source.rendered.gist}}}
                    {{/each}}
                    <h2>
                        <a href="/blogs">Read more SCVO blogs</a>
                    </h2>
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-12-tablet mdc-layout-grid__cell--span-12-phone">
                    <h2>
                        Latest TFN news
                    </h2>
                    {{#each supplimentaryResponses.tfn_latest.hits.hits}}
                    {{{_source.rendered.gist}}}
                    {{/each}}
                    <h2>
                        <a href="http://thirdforcenews.org.uk">Read more on TFN</a>
                    </h2>
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-12-tablet mdc-layout-grid__cell--span-12-phone no-border">
                    <h2>
                        Top third sector jobs
                    </h2>
                    {{#each supplimentaryResponses.goodmoves_latest.hits.hits}}
                    {{{_source.rendered.gist}}}
                    {{/each}}
                    <h2>
                        <a href="https://goodmoves.com">See more on <strong>good</strong>moves</a>
                    </h2>
                </div>
            </div>
        </div>
    </div>
</section>

{{> footer_join_our_hub}}
