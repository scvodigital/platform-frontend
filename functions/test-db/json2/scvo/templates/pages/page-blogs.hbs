<div class="page posts blogs">
    <div class="splash-image splash-image-{{supplimentaryResponses.page.hits.hits.[0]._type}}" style="{{> header_splash_image}}">
        <div class="splash-overlay{{#if supplimentaryResponses.page.hits.hits.[0]._source.hide_overlay}} splash-overlay-hidden{{/if}}">
            <div class="container-fluid">
                <div class="mdc-layout-grid">
                    {{#if supplimentaryResponses.page.hits.hits.[0]._source.header_text}}
                    <img src="{{supplimentaryResponses.page.hits.hits.[0]._source.header_text}}" alt="{{supplimentaryResponses.page.hits.hits.[0]._source.title}}" class="header-text" />
                    {{else}}
                    <h1 class="header-text">
                        <span class="header-text-banner">
                            Blogs
                        </span>
                    </h1>
                    {{/if}}
                </div>
                {{> header_caption}}
            </div>
        </div>
    </div>
    <div class="container-fluid">
        {{> breadcrumbs_posts}}
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-8-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone content post-content">
                    {{#compare primaryResponse.hits.total ">" 0}}
                    {{> search_info}}
                    <ul class="supplimentary-list">
                        {{#each primaryResponse.hits.hits}}
                        {{{_source.rendered.list}}}
                        {{/each}}
                    </ul>
                    {{> pagination}}
                    {{else}}
                    <p>
                        No posts by this author could be loaded.
                    </p>
                    {{/compare}}
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone sidebar post-sidebar">
                    {{> wee_search title="Search posts" searchPath="/search" searchRoute="main_search" extraParams='{ "type": "scvo-cms-post" }'}}

                    {{#with supplimentaryResponses.page.hits.hits.[0]._source}}
                    {{{rendered.full}}}
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
</div>
