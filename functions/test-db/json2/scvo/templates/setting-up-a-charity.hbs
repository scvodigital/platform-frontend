<div class="page">
    <div class="splash-image splash-image-{{primaryResponse.hits.hits.[0]._type}}" style="{{> header_splash_image}}">
        <div class="splash-overlay" style="{{> header_splash_overlay}}">
            <div class="container-fluid">
                <div class="mdc-layout-grid">
                    {{#if primaryResponse.hits.hits.[0]._source.header_text}}
                    <img src="{{primaryResponse.hits.hits.[0]._source.header_text}}" alt="{{primaryResponse.hits.hits.[0]._source.title}}" class="header-text" />
                    {{else}}
                    <h1 class="header-text">
                        <span class="header-text-banner">
                            {{#if primaryResponse.hits.hits.[0]}}
                            {{{primaryResponse.hits.hits.[0]._source.title}}}
                            {{else}}
                            404: Not found
                            {{/if}}
                        </span>
                    </h1>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        {{> breadcrumbs}}
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-8 content page-content">
                    {{#with primaryResponse.hits.hits.[0]._source}}
                    {{{rendered.full}}}
                    {{/with}}
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4 sidebar page-sidebar">
                    {{#compare supplimentaryResponses.related_posts.hits.total ">" 0}}
                    <div class="related-posts">
                        <h3 class="blogs">Related posts</h3>
                        <ul class="v-margin supplimentary-list">
                            {{#each supplimentaryResponses.related_posts.hits.hits}}
                            {{{_source.rendered.sidebar_mini}}}
                            {{/each}}
                        </ul>
                        <a class="v-margin mdc-button mdc-button--raised" href="/post/categories/{{primaryResponse.hits.hits.[0]._source.categories_slug.[0]}}">Read more</a>
                    </div>
                    {{/compare}}
                </div>
            </div>
        </div>
    </div>
    <div class="footer-image faqs">
        <div class="container-fluid">
            <div class="mdc-layout-grid">
                <div class="mdc-layout-grid__inner">
                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
                        <h2>Frequently asked questions</h2>
                        <p>What is a SCIO?</p>
                        <p>Do I need to be a charity to fundraise?</p>
                        <p>Can we pay the trustees of our charity?</p>
                        <p>What is an honorarium?</p>
                        <p>How long does it take to set up a charity?</p>
                        <a href="/setting-up-a-charity/frequently-asked-questions" class="mdc-button mdc-button--raised">See all FAQs</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>