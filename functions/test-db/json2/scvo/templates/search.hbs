<div class="search v-margin">
    <div class="container-fluid">
        <h2>Search SCVO, Goodmoves, TFN, and more</h2>
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3 sidebar">
                    <form [searchroute]="'main_search'" data-auto-search="true" autocomplete="off">
                        <input type="text" class="mdc-textfield__input searchRoute" placeholder="Search keywords" value="{{params.query.q}}" name="q" id="main-q">
                        {{#*inline "filter_checkbox"}}
                            <div class="mdc-form-field">
                                <div class="mdc-checkbox">
                                    <input type="checkbox" name="type" id="type-{{value}}" value="{{value}}" class="mdc-checkbox__native-control"
                                    {{#if (contains params.query.type value)}}checked{{/if}}>
                                    <div class="mdc-checkbox__background">
                                        <svg class="mdc-checkbox__checkmark" viewBox="0 0 24 24">
                                            <path class="mdc-checkbox__checkmark__path" fill="none" stroke="white" d="M1.73,12.91 8.1,19.28 22.79,4.59"></path>
                                        </svg>
                                        <div class="mdc-checkbox__mixedmark"></div>
                                    </div>
                                </div>
                                <label for="type-{{value}}">
                                    {{label}}
                                </label>
                            </div>
                        {{/inline}}

                        <h3>SCVO</h3>
                        {{>filter_checkbox label="Blog posts" value="scvo-cms-post"}}
                        {{>filter_checkbox label="Evidence Library documents" value="scvo-document-evidence"}}
                        {{>filter_checkbox label="Member organisations" value="scvo-member"}}
                        {{>filter_checkbox label="Pages" value="scvo-cms-page"}}
                        {{>filter_checkbox label="Staff" value="scvo-staff"}}
                        {{>filter_checkbox label="Training & events" value="scvo-event"}}

                        <h3>Digital Participation</h3>
                        {{>filter_checkbox label="Digital funded projects" value="scvo-grant-charter"}}
                        {{>filter_checkbox label="Digital Participation Charter signatories" value="digital-charter-signatory"}}

                        <h3>Funding Scotland</h3>
                        {{>filter_checkbox label="Funding Scotland funds" value="funding-scotland-fund"}}

                        <h3>Good HQ</h3>
                        {{>filter_checkbox label="Good HQ organisation profiles" value="goodhq-organisation"}}

                        <h3>Goodmoves</h3>
                        {{>filter_checkbox label="Goodmoves jobs" value="goodmoves-legacy"}}

                        <h3>TFN</h3>
                        {{>filter_checkbox label="TFN blog posts" value="tfn-blog-post"}}
                        {{>filter_checkbox label="TFN events" value="tfn-event"}}
                        {{>filter_checkbox label="TFN features" value="trn-feature"}}
                        {{>filter_checkbox label="TFN lists" value="tfn-list"}}
                        {{>filter_checkbox label="TFN news posts" value="tfn-news-post"}}
                        {{>filter_checkbox label="TFN polls" value="tfn-poll"}}
                    </form>
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-9 content">
                    {{> search_info}}

                    {{#each primaryResponse.hits.hits}}
                        {{>highlight_result}}
                    {{/each}}

                    {{> pagination}}
                </div>
            </div>
        </div>
    </div>
</div>
