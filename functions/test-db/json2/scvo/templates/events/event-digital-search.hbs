<div class="event event-search">
    <div class="splash-image splash-image-{{primaryResponse.hits.hits.[0]._type}}" style="{{> header_splash_image}}">
        <div class="splash-overlay{{#if primaryResponse.hits.hits.[0]._source.hide_overlay}} splash-overlay-hidden{{/if}}">
            <div class="container-fluid">
                <div class="mdc-layout-grid">
                    {{#if primaryResponse.hits.hits.[0]._source.header_text}}
                    <img src="{{primaryResponse.hits.hits.[0]._source.header_text}}" alt="{{primaryResponse.hits.hits.[0]._source.title}}" class="header-text" />
                    {{else}}
                    <h1 class="header-text">
                        <span class="header-text-banner">
                            Digital events
                        </span>
                    </h1>
                    {{/if}}
                </div>
                {{> header_caption}}
            </div>
        </div>
    </div>
    <div class="container-fluid page-content">
        <ul class="breadcrumbs">
            <li><a href="/">Home</a></li>
            <li><a href="/digital">Digital</a></li>
            <li>Events</li>
        </ul>

        <h2>Find digital events</h2>
        <form action="/digital/events" method="GET" [searchroute]="'event_digital_search'" data-auto-search="true">
            <div class="mdc-layout-grid">
                <div class="mdc-layout-grid__inner">
                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone sidebar event-sidebar">
                        <div class="mdc-textfield mdc-textfield--upgraded">
                            <input type="text" class="mdc-textfield__input" name="q" id="events-keywords" placeholder="Keywords" value="{{params.query.q}}">
                        </div>
                        <h3>Filter</h3>
                        <div class="mdc-form-field">
                            <select class="mdc-select" role="listbox" id="events-course_type" name="course_type">
                                <option value="" {{#if params.query.course_type}}{{else}}selected{{/if}}>Select event type</option>
                                {{#each supplimentaryResponses.types.aggregations.types.buckets}}
                                <option value="{{key}}" {{#compare ../params.query.course_type "===" key}}selected{{/compare}}>{{key}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="mdc-form-field">
                            <select class="mdc-select" role="listbox" id="events-month" name="month">
                                <option value="" {{#if params.query.month}}{{else}}selected{{/if}}>Any month</option>
                                {{#each supplimentaryResponses.types.aggregations.months.buckets}}
                                {{#if key}}
                                <option value="{{key}}" {{#compare ../params.query.month "===" key}}selected{{/compare}}>{{key}}</option>
                                {{/if}}
                                {{/each}}
                            </select>
                        </div>
                        <div class="mdc-form-field">
                            <select class="mdc-select" role="listbox" id="events-locations" name="location">
                                <option value="" {{#if params.query.location}}{{else}}selected{{/if}}>Any location</option>
                                {{#each supplimentaryResponses.types.aggregations.locations.buckets}}
                                {{#if key}}
                                <option value="{{key}}" {{#compare ../params.query.location "===" key}}selected{{/compare}}>{{key}}</option>
                                {{/if}}
                                {{/each}}
                            </select>
                        </div>
                        <!-- <div class="mdc-form-field">
                            <div class="mdc-checkbox">
                                <input type="checkbox" class="mdc-checkbox__native-control" id="events-free" name="free" {{#if params.query.free}}checked{{/if}} />
                                <div class="mdc-checkbox__background">
                                    <svg class="mdc-checkbox__checkmark" viewBox="0 0 24 24">
                                        <path class="mdc-checkbox__checkmark__path" fill="none" stroke="white" d="M1.73,12.91 8.1,19.28 22.79,4.59"/>
                                    </svg>
                                    <div class="mdc-checkbox__mixedmark"></div>
                                </div>
                            </div>
                            <label for="events-free">Only free events</label>
                        </div> -->
                        <button class="mdc-button mdc-button--raised" type="submit">
                            Search
                        </button>
                    </div>
                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-9-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone content event-content">
                        {{> search_info}}

                        {{#each primaryResponse.hits.hits}}
                        {{{_source.rendered.scvo_list}}}
                        {{/each}}

                        {{> pagination}}
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
