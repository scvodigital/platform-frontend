    	src="https://storage.googleapis.com/scvo-assets/assets/js/cookieinfo.min.js"
    	data-bg="#251032"
    	data-fg="#FFFFFF"
    	data-link="#FFFFFF"
        data-divlink="#FFFFFF"
        data-divlinkbg="#B3185B"
        data-moreinfo="/privacy-cookies-policy"
    	data-cookie="CookieInfoScript"
    	data-text-align="left">
    </script>
    <script type="text/javascript" src="/assets/js/scvo/root.js"></script>
    <!--{section:foot}-->
</body>
</html>
