<!doctype html>
<html lang="en">
<head prefix="og: http://ogp.me/ns#">
    <meta charset="utf-8">
    <base href="/">
    <!--{section:head}-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="57x57" href="https://storage.googleapis.com/scvo-assets/assets/icons/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="https://storage.googleapis.com/scvo-assets/assets/icons/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="https://storage.googleapis.com/scvo-assets/assets/icons/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="https://storage.googleapis.com/scvo-assets/assets/icons/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="https://storage.googleapis.com/scvo-assets/assets/icons/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="https://storage.googleapis.com/scvo-assets/assets/icons/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="https://storage.googleapis.com/scvo-assets/assets/icons/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="https://storage.googleapis.com/scvo-assets/assets/icons/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="https://storage.googleapis.com/scvo-assets/assets/icons/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192"  href="https://storage.googleapis.com/scvo-assets/assets/icons/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="https://storage.googleapis.com/scvo-assets/assets/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="https://storage.googleapis.com/scvo-assets/assets/icons/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="https://storage.googleapis.com/scvo-assets/assets/icons/favicon-16x16.png">
    <link rel="manifest" href="https://storage.googleapis.com/scvo-assets/assets/icons/manifest.json">
    <meta name="msapplication-TileColor" content="#00838f">
    <meta name="msapplication-TileImage" content="https://storage.googleapis.com/scvo-assets/assets/icons/ms-icon-144x144.png">
    <meta name="theme-color" content="#00838f">
    <link rel="search" type="application/opensearchdescription+xml" title="SCVO" href="https://storage.googleapis.com/scvo-assets/assets/opensearch.xml" />
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-3467930-27"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-3467930-2', { 'send_page_view': true });
        {{#each route.primaryResponse.hits.hits}}
        gtag('event', 'document_hit', {
            event_category: '{{_type}}',
            event_label: '{{_id}}'
        });
    {{/each}}

    {{#if route.params.query.debug}}
        console.log('#### DEBUG MODE ON ####');
        console.log('Route:', {{{regexReplace (regexReplace (stringify route) "(<\/script)" "gi" '</scr\" + \"ipt') "(\r|\n)" "gi" ""}}});
    {{/if}}
    </script>
    <link type="text/css" rel="stylesheet" href="https://storage.googleapis.com/scvo-assets/assets/css/material-components-web.min.css">
    <link type="text/css" rel="stylesheet" href="/assets/fonts/fontawesome/css/fontawesome-all.min.css">
    <link type="text/css" rel="stylesheet" href="/assets/css/scvo-styles.css">
</head>
<body class="mdc-theme--site-bg {{#if route.params.path}}{{replace route.params.path '_' ' '}}{{else}}home{{/if}}">
    <scvo-site>
        <div class="mdc-typography mdc-theme--site-bg">
            <header class="mdc-toolbar mdc-toolbar--fixed mdc-theme--primary-light-bg">
                <div class="mdc-toolbar__row">
                    <div class="container-fluid">
                        <section class="mdc-toolbar__section mdc-toolbar__section--align-start">
                            <span class="mdc-toolbar__title catalog-title">
                                <a href="/" class="brand-logo" title="Scottish Council for Voluntary Organisations">
                                    <img src="https://storage.googleapis.com/scvo-assets/assets/images/scvo-logo.png" />
                                </a>
                            </span>
                        </section>
                        <section class="mdc-toolbar__section upper-menu mdc-toolbar__section--align-end">
                            <nav id="upper-tab-bar" class="mdc-tab-bar" [menu]="'main-upper'" [menulinkselector]="''" [menulabelselector]="'span.mdc-tab--label'" [menuactiveclass]="'mdc-tab--active'">
                                {{#each menus.main-upper}}
                                <a class="mdc-tab{{#if match}} mdc-tab--active{{/if}}" href="{{stripTrailingSlash path}}"><span class="mdc-tab--label">{{{label}}}</span></a>
                                {{/each}}
                            </nav>
                        </section>
                        <section class="mdc-toolbar__section mdc-toolbar__section--align-end mdc-toolbar__section--shrink-to-fit toolbar-search">
                            <form [searchroute]="'main_search'" class="mdc-form-field mdc-form-field--align-end search_form" autocomplete="off" action="/search" method="GET">
                                <div class="mdc-textfield">
                                    <input type="text" class="mdc-textfield__input white-text mdc-text-field searchRoute" placeholder="Search" id="q" name="q" aria-label="Search keywords" value="{{params.query.q}}">
                                </div>
                                <button type="submit" class="mdc-toolbar__icon mdc-toolbar__search" aria-label="Search" alt="Search">
                                    <span class="far fa-search" aria-hidden="true"></span>
                                </button>
                            </form>
                        </section>
                        <section class="mdc-toolbar__section mdc-toolbar__section--align-end mdc-toolbar__section--shrink-to-fit">
                            <button id="menu_button" class="menu mdc-toolbar__icon mdc-toolbar__icon--menu" onclick="window.drawer.open = true">
                                <span class="far fa-2x fa-bars" aria-hidden="true"></span>
                            </button>
                        </section>
                    </div>
                </div>
                <div class="mdc-toolbar__row toolbar-nav mdc-theme--primary-dark-bg">
                    <div class="container-fluid">
                        <section class="mdc-toolbar__section mdc-toolbar__section--align-start toolbar-menu">
                            <nav id="main-tab-bar" class="mdc-tab-bar" [menu]="'main'" [menulinkselector]="''" [menulabelselector]="'span.mdc-tab--label'" [menuactiveclass]="'mdc-tab--active'">
                                {{#each menus.main}}
                                <a class="mdc-tab{{#if match}} mdc-tab--active{{/if}}" href="{{stripTrailingSlash path}}"><span class="mdc-tab--label">{{{label}}}</span></a>
                                {{/each}}
                            </nav>
                        </section>
                    </div>
                </div>
            </header>

            <aside class="mdc-temporary-drawer" id="menu_draw" dir="rtl">
                <nav class="mdc-temporary-drawer__drawer">
                    <header class="mdc-temporary-drawer__header">
                        <div class="mdc-temporary-drawer__header-content mdc-theme--primary-bg">
                            <img src="https://storage.googleapis.com/scvo-assets/assets/images/scvo-logo.png" />
                        </div>
                    </header>
                    <nav class="mdc-temporary-drawer__content mdc-list-group">
                        <div id="icon-with-text-demo" class="mdc-list">
                            <a class="mdc-list-item" href="/" onclick="window.drawer.open = false">Home</a>
                            {{#each menus.main}}
                            <a class="mdc-list-item" href="{{path}}" data-mdc-tabindex-handled="true" tabindex="-1" onclick="window.drawer.open = false">
                                {{{label}}}
                            </a>
                            {{/each}}
                            {{#each menus.main-upper}}
                            <a class="mdc-list-item" href="{{path}}" data-mdc-tabindex-handled="true" tabindex="-1" onclick="window.drawer.open = false">
                                {{{label}}}
                            </a>
                            {{/each}}
                        </div>
                    </nav>
                </nav>
            </aside>

            <main class="mdc-toolbar-fixed-adjust mdc-theme--background">
                <div class="container-content">
                    <!--{section:body}-->
                </div>
            </main>

            <footer>
                <div class="footer-main">
                    <div class="container-fluid">
                        <div class="mdc-layout-grid">
                            <div class="mdc-layout-grid__inner">
                                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone contact">
                                    <h3>Contact</h3>
                                    <ul class="fa-ul">
                                        <li>
                                            <span class="fa-li"><span class="fas fa-envelope-square"></span></span>
                                            <a href="mailto:enquiries@scvo.org.uk">enquiries@scvo.org.uk</a>
                                        </li>
                                        <li>
                                            <span class="fa-li"><span class="fas fa-phone-square"></span></span>
                                            <a href="tel:+441314748000">0131 474 8000</a>
                                        </li>
                                    </ul>
                                    <p>
                                        Information service helpline
                                    </p>
                                    <ul class="fa-ul">
                                        <li>
                                            <span class="fa-li"><span class="fas fa-phone-square"></span></span>
                                            <a href="tel:+448001690022">0800 169 0022</a>
                                        </li>
                                    </ul>
                                    <ul class="mdc-list">
                                        <li class="mdc-list-item"><a href="/services/membership">Become a member</a></li>
                                    </ul>
                                </div>
                                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone social">
                                    <h3>Social</h3>
                                    <ul class="fa-ul">
                                        <li>
                                            <span class="fa-li"><span class="fab fa-twitter-square"></span></span>
                                            <a href="https://twitter.com/scvotweet">Twitter</a>
                                        </li>
                                        <li>
                                            <span class="fa-li"><span class="fab fa-facebook-square"></span></span>
                                            <a href="https://www.facebook.com/SCVO1939">Facebook</a>
                                        </li>
                                        <li>
                                            <span class="fa-li"><span class="fas fa-heart"></span></span>
                                            <a href="https://goodhq.org/scvo">Good HQ</a>
                                        </li>
                                        <li>
                                            <span class="fa-li"><span class="fab fa-youtube"></span></span>
                                            <a href="https://www.youtube.com/user/SCVOtv">YouTube</a>
                                        </li>
                                        <li>
                                            <span class="fa-li"><span class="fab fa-linkedin"></span></span>
                                            <a href="https://www.linkedin.com/company/scvo">LinkedIn</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone help">
                                    <h3>Help</h3>
                                    <ul class="mdc-list">
                                        {{#each menus.footer}}
                                        <li class="mdc-list-item"><a href="{{path}}">{{{label}}}</a></li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone about">
                                    <h3>About</h3>
                                    <p>
                                        The <strong>Scottish Council for Voluntary Organisations</strong> is the membership organisation for Scotland's charities, voluntary organisations and social enterprises. <a href="/about">Find out more</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer-copyright">
                    <div class="container-fluid">
                        <div class="mdc-layout-grid">
                            <div class="mdc-layout-grid__inner">
                                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-9-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone">
                                    <p>
                                        &copy; {{momentFormat (moment) "YYYY"}}. The Scottish Council for Voluntary Organisations (SCVO) is a Scottish Charitable Incorporated Organisation. Charity registered in Scotland <a href="https://www.oscr.org.uk/about-charities/search-the-register/charity-details?number=SC003558">SC003558</a>. Registered office Mansfield Traquair Centre, 15 Mansfield Place, Edinburgh EH3 6BB.
                                    </p>
                                </div>
                                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone">
                                    <a href="/" class="brand-logo" title="Scottish Council for Voluntary Organisations">
                                        <img src="https://storage.googleapis.com/scvo-assets/assets/images/scvo-logo.png" alt="Scottish Council for Voluntary Organisations" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </scvo-site>

    <script type="text/javascript" src="https://storage.googleapis.com/scvo-assets/assets/js/material-components-web.js"></script>
    <script type="text/javascript" src="https://storage.googleapis.com/scvo-assets/assets/js/headroom.min.js"></script>
