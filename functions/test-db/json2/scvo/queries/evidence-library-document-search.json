{
    "size": 10,
    "from": {{multiply (subtract (default query.page 1) 1) 10}},
    "_source": [
        "rendered.scvo_list",
        "rendered.json_ld"
    ],
    "query": {
        "bool": {
            {{#if query.classification}}
                "filter": [
                    "term": { "library_classification_slug": "{{query.classification}}" }
                ]{{#if query.q}},{{/if}}
            {{/if}}
            {{#if query.q}}
                "must": [
                    {
                        "query_string": {
                            "query": "{{query.q}}",
                            "default_operator": "AND",
                            "analyzer": "snowball"
                        }
                    }
                ]
            {{/if}}
        }
    }
    {{#if query.q}}
    {{else}}
        ,
        "sort": {
            "date_posted": "desc"
        }
    {{/if}}
}
