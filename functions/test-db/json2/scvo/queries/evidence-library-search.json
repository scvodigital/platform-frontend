{
    "size": 10,
    "from": {{multiply (subtract (default query.page 1) 1) 10}},
    "query": {
        "bool": {
            "must": [
                {{#if query.type}}
                    {
                        "term": {
                            "type": "{{query.type}}"
                        }
                    }
                    {{#if query.q}},{{/if}}
                {{/if}}
                {{#if query.q}}
                    {
                        "query_string": {
                            "query": "{{query.q}}",
                            "default_operator": "AND",
                            "analyzer": "snowball"
                        }
                    }
                {{/if}}
            ]
        }
    }
}
