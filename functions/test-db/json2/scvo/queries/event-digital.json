{
    "size": 3,
    "from": {{multiply (subtract (default query.page 1) 1) 10}},
    "_source": [
        "rendered.mini",
        "date_start"
    ],
    "query": {
        "bool": {
            "must": [
                {
                    "term": {
                        "course_type": "Training Course"
                    }
                },
                {
                    "range" : {
                        "date_start" : {
                            "gte" : "now/d"
                        }
                    }
                }
            ]
        }
    },
    "sort": {
		"date_start": "asc"
	}
}
