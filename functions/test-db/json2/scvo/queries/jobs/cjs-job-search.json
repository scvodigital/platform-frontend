{
    "size": 10,
    "from": {{multiply (subtract (default query.page 1) 1) 10}},
    "_source": [
        "rendered.scvo_list"
    ],
    "query": {
        "bool": {
            "must": [
                {{#if query.q}}
                {
                    "query_string": {
                        "query": "{{query.q}}",
                        "default_operator": "AND",
                        "analyzer": "snowball"
                    }
                },
                {{/if}}
                {{#if query.job_number}}
                {
                    "term": {
                        "job_number": "{{query.job_number}}"
                    }
                },
                {{/if}}
                {{#if query.location}}
                {
                    "term": {
                        "organisation.area_town": "{{query.location}}"
                    }
                },
                {{/if}}
                {{#if query.sector}}
                {
                    "term": {
                        "occupational_sector": "{{query.sector}}"
                    }
                },
                {{/if}}
                {{#if query.region}}
                {
                    "term": {
                        "local_authority": "{{query.region}}"
                    }
                },
                {{/if}}
                {
                    "term": {
                        "status": "Subbed"
                    }
                },
                {
                    "term" : {
                        "cjs_lookup": "{{#compare phase "aag"}}AA PH7{{else}}{{#compare phase "p52"}}CJS PH7 PT 78wks{{else}}CJS PH7{{/compare}}{{/compare}}"
                    }
                }
            ]
        }
    },
    "sort": {
        "_score": "desc"
    }
}
