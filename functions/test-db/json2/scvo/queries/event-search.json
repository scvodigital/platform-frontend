{
    "size": 12,
    "from": {{multiply (subtract (default query.page 1) 1) 12}},
    "_source": [
        "slug",
        "title",
        "course_type",
        "date_start",
        "rendered.list",
        "rendered.json_ld"
    ],
    "query": {
        "bool": {
            {{#if query.free}}
            "must_not": [
                {
                    "exists": {
                        "field": "cost"
                    }
                }
            ],
            {{/if}}
            "must": [
                {{#if query.course_type}}
                {
                    "term": {
                        "course_type": "{{query.course_type}}"
                    }
                },
                {{/if}}
                {{#if query.q}}
                {
                    "query_string": {
                        "query": "{{query.q}}",
                        "default_operator": "AND",
                        "analyzer": "snowball"
                    }
                },
                {{/if}}
                {
                    "range" : {
                        "date_start" : {
                            "gte" : "now/d"
                        }
                    }
                },
                {
                    "term": {
                        "record_type": "Events Team"
                    }
                }
            ]
        }
    },
    "sort": {
		"date_start": "asc"
	}
}
