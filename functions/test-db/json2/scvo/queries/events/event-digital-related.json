{
	"size": 4,
    "_source": [
        "rendered.scvo_list"
    ],
	"query": {
        "bool": {
            "must": [
                {
                    "simple_query_string": {
                        "query": "{{primaryResponse.hits.hits.[0]._source.title}} {{primaryResponse.hits.hits.[0]._source.type}} {{primaryResponse.hits.hits.[0]._source.trainer}}",
                        "default_operator": "or",
                        "fields": ["text_bag"],
                        "analyzer": "snowball"
                    },
                },
                {
                    "range" : {
                        "date_start" : {
                            "gte" : "now/d"
                        }
                    }
                },
                {
                    "term": {
                        "team": "digital"
                    }
                }
            ],
            "should": [
                {
                    "bool": {
                        "must_not": {
                            "match": {
                                "Id": "{{primaryResponse.hits.hits.[0]._source.Id}}"
                            }
                        }
                    }
                }
            ],
            "minimum_should_match": 1
        }
	}
}
