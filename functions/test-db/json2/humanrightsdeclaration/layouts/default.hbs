        data-divlink="#FFFFFF"
        data-divlinkbg="#2C2C2B"
        data-moreinfo="/privacy-cookies-policy"
    	data-cookie="CookieInfoScript"
    	data-text-align="left">
    </script>
    <script type="text/javascript" src="/assets/js/humanrightsdeclaration/root.js"></script>
