<body class="{{replace route.params.path '_' ' '}}">
    <scvo-site>
        <div class="mdc-typography">
            <header class="mdc-toolbar">
                <div class="mdc-toolbar__row">
                    <div class="container-fluid">
                        <section class="mdc-toolbar__section mdc-toolbar__section--align-start">
                            <span class="mdc-toolbar__title catalog-title">
                                <a href="/" class="brand-logo" title="The Scotland Declaration on Human Rights">
                                    <img src="https://storage.googleapis.com/human-rights-declaration/sdhr-logo.png" class="brand-logo-mobile" />
                                    <img src="https://storage.googleapis.com/human-rights-declaration/sdhr-logo-desktop.png" class="brand-logo-desktop" />
                                </a>
                            </span>
                        </section>
                        <section class="mdc-toolbar__section mdc-toolbar__section--align-end">
                            <nav id="main-tab-bar" class="mdc-tab-bar">
                                <a class="mdc-tab" href="/">Home</a>
                                <a class="mdc-tab" href="/the-declaration">The Declaration</a>
                                <a class="mdc-tab" href="/why-sign">Why sign?</a>
                                <a class="mdc-tab" href="/sign-up">Sign up</a>
                                <a class="mdc-tab" href="/faq">FAQ</a>
                                <!-- <a class="mdc-tab" href="/signatories">Signatories</a> -->
                            </nav>
                            <button class="menu mdc-toolbar__icon mdc-toolbar__icon--menu" id="menu_button" aria-label="Menu" alt="Menu">
                                <span class="fal fa-2x fa-bars" aria-hidden="true"></span>
                            </button>
                        </section>
                    </div>
                </div>
            </header>

            <aside class="mdc-drawer mdc-drawer--temporary" id="menu_drawer" dir="rtl">
              <nav class="mdc-drawer__drawer">
                <header class="mdc-drawer__header">
                  <div class="mdc-drawer__header-content">
                      <img src="https://storage.googleapis.com/human-rights-declaration/sdhr-logo.png" class="brand-logo-mobile" />
                  </div>
                </header>
                <nav id="icon-with-text-demo" class="mdc-drawer__content mdc-list">
                    <a class="mdc-list-item" href="/" data-mdc-tabindex-handled="true" tabindex="-1" onclick="window.drawer.open = false">Home</a>
                    <a class="mdc-list-item" href="/the-declaration" data-mdc-tabindex-handled="true" tabindex="-1" onclick="window.drawer.open = false">The Declaration</a>
                    <a class="mdc-list-item" href="/why-sign" data-mdc-tabindex-handled="true" tabindex="-1" onclick="window.drawer.open = false">Why sign?</a>
                    <a class="mdc-list-item" href="/sign-up" data-mdc-tabindex-handled="true" tabindex="-1" onclick="window.drawer.open = false">Sign up</a>
                    <a class="mdc-list-item" href="/faq" data-mdc-tabindex-handled="true" tabindex="-1" onclick="window.drawer.open = false">FAQ</a>
                    <!-- <a class="mdc-list-item" href="/signatories" data-mdc-tabindex-handled="true" tabindex="-1" onclick="menu_draw.MDCTemporaryDrawer.open = false">Signatories</a> -->
                </nav>
              </nav>
            </aside>

            <main>
                <div class="container-fluid">
                    <router-outlet>{{{route.rendered}}}</router-outlet>
                </div>
            </main>

            <footer>
                <div class="footer">
                    <div class="container-fluid">
                        <div class="footer-main">
                            <div class="footer-brand">
                                <a href="http://scvo.org" class="brand-logo" title="The Scotland Declaration on Human Rights">
                                    <img src="assets/images/scvo-logo.png" />
                                </a>
                                <a href="https://www.equalityhumanrights.com/en" class="brand-logo" title="Equality Human Rights Scotland">
                                    <img src="https://storage.googleapis.com/human-rights-declaration/ehrc-logo.svg" />
                                </a>
                                <a href="http://www.scottishhumanrights.com/" class="brand-logo" title="Scottish HumanRights Commission">
                                    <img src="https://storage.googleapis.com/human-rights-declaration/shrc-logo.svg" style="max-width:none;height:44px;" />
                                </a>
                                <a href="https://hrcscotland.org/" class="brand-logo" title="Human Rights Consortium Scotland">
                                    <img src="https://storage.googleapis.com/human-rights-declaration/hrcs-logo.jpg" />
                                </a>
                            </div>
                            <div class="footer-copyright">
                                <p>
                                    The Scotland Declaration on Human Rights is built and managed by the
                                    <a href="https://scvo.org">Scottish Council for Voluntary Organisations</a>
                                    with support from Human Rights Consortium Scotland, Scottish Human Rights
                                    Commission and the Equality and Human Rights Commission
                                </p>
                                <p class="copyright">
                                    &copy; {{momentFormat (moment) "YYYY"}}. The Scottish Council for Voluntary Organisations
                                    (SCVO) is a Scottish Charitable Incorporated Organisation. Charity registered
                                    in Scotland
                                    <a href="https://www.oscr.org.uk/public/search-scottish-charity-register/charity-details?number=SC003558">SC003558</a>.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </scvo-site>
    <script type="text/javascript" src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
