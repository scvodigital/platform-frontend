{
  "size": 4,
  "_source": ["Id", "slug", "vacancy_status", "rendered.vacancy_status", "top_job", "description_short", "title", "geo_vacancy_coords", "location", "salary", "role_status_list", "closing_date", "organisation.slug", "organisation.name", "roles_slugs", "sectors_slugs", "organisation.has_logo", "organisation.logo_url"],
  "query": {
    "bool": {
      "should": [
        {
          "match": {
            "title" : {
                "query" : "{{data.primaryResponse.hits.hits.[0]._source.title}}",
                "operator" : "and",
                "zero_terms_query": "all"
            }
          }
        },
        {
          "terms": {
            "sectors_slugs": {{{stringify (arrayify data.primaryResponse.hits.hits.[0]._source.sectors_slugs)}}}
          }
        },
        {
          "terms": {
            "roles_slugs": {{{stringify (arrayify data.primaryResponse.hits.hits.[0]._source.roles_slugs)}}}
          }
        }
      ],
      "must": [
        {
          "term": {
            "vacancy_status": "vacancy-open"
          }
        }
      ],
      "must_not": [
        {
          "term": {
            "Id": "{{data.primaryResponse.hits.hits.[0]._source.Id}}"
          }
        }
      ]
    }
  }
}