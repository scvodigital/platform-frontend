<section class="currently-recruiting">
  <div class="mdc-typography--headline5 v-margin-full">
    Currently recruiting &ensp; <span class="mdc-typography--caption"><a href="/organisations">See all</a></span>
  </div>
  <div class="mdc-layout-grid v-margin-full">
    <div class="mdc-layout-grid__inner">
      {{#each data.organisations.currently_recruiting.aggregations.active.job_count.buckets ~}}
      <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-2-tablet mdc-layout-grid__cell--span-1-phone">
        {{#with top_hits.hits.hits.[0]._source.organisation}}
        <a href="/organisation/{{slug}}" title="{{name}}" class="organisation-logo">
          <img src="{{logo_url}}" />
        </a>
        {{/with}}
      </div>
      {{/each ~}}
    </div>
  </div>
</section>