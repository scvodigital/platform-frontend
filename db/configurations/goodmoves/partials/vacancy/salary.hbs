{{#compare remuneration_type "Salaried" ~}}
  {{#ifNone salary_min salary_max ~}}
    TBC
  {{else}}
    {{#if salary_circa}} Circa {{/if}}
    {{#ifAll (compare salary_min ">" 0) (if salary_max false) ~}}
      from &pound;{{addCommas salary_min}}
    {{else}}
      {{#ifAll (if salary_min false) (compare salary_max ">" 0) ~}}
        up to &pound;{{addCommas salary_max}}
      {{else}}
        {{#compare salary_max ">" salary_min ~}}
          &pound;{{addCommas salary_min}} - &pound;{{addCommas salary_max}}
        {{else}}
          &pound;{{addCommas salary_min}}
        {{/compare ~}}
      {{/ifAll ~}}
    {{/ifAll ~}}
  {{/ifNone ~}}
  {{#compare status "Part time"}} pro-rata {{/compare}}
{{else}}
  {{#if remuneration_type}} {{remuneration_type}} {{/if}}
{{/compare ~}}
