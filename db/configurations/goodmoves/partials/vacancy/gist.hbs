<div class="mdc-card gist" data-vacancy-id="{{Id}}">
  <div class="mdc-card__info--vacancy-row">
    <div class="mdc-card__media mdc-card__media--square demo-card__media search-result-card__media--organisation" style="background-image:url({{organisation.logo_url}});"></div>
    <div class="mdc-card__info--vacancy">
      <div class="mdc-card__info--vacancy-title mdc-typography--headline7">
        {{title}}
      </div>
      <div class="mdc-card__info--vacancy-organisation mdc-typography--body1">
        <a href="/organisation/{{organisation.slug}}{{@root.request.url.search}}">{{organisation.name}}</a>
      </div>
      <div class="mdc-card__info--vacancy-details mdc-typography--caption">
        <span class="far fa-calendar-alt fa-fw" title="Closing date"></span>
        {{{momentFormat (moment closing_date "x") "Do MMMM YYYY"}}}
      </div>
    </div>
  </div>
  <hr class="mdc-list-divider">
  <div class="mdc-card__actions">
    <div class="mdc-card__action-buttons demo-card__action-buttons--text-only mdc-card__actions--full-bleed">
      <a href="/vacancy/{{slug}}{{@root.request.url.search}}" class="mdc-card__action">Find out more</a>
    </div>
  </div>
</div>
