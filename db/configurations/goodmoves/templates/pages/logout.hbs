  <form id="login-form" method="POST" class="login-form">
    <div class="mdc-card">
      <div class="mdc-card__info--vacancy">
        <div class="mdc-card__info--vacancy-title mdc-typography--headline4">
          Loging out
        </div>
      </div>
    </div>
  </form>
  <script>
    document.addEventListener("DOMContentLoaded", function(event) {
      window.setTimeout(function() {
        goodmoves.app.auth().signOut().then(function() {
          window.location.href = '/';
          goodmoves.setCookie('gm_token'); 
        }).catch(function(err) {
          console.error('Error logging out:', err);
        });
      }, 1000);
    });
  </script>
