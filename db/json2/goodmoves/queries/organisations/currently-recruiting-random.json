{
  "size": 0,
  "_source": false,
  "aggs": {
    "active": {
      "filter": {
        "bool": {
          "must": [
            {
              "term": {
                "vacancy_status": "vacancy-open"
              }
            },
            {
              "term": {
                "organisation.has_logo": true
              }
            }
          ]
        }
      },
      "aggs": {
        "job_count": {
          "terms": {
            "field": "organisation.id",
            "size": 10000
          },
          "aggs": {
            "top_hits": {
              "top_hits": {
                "sort": [
                  {
                    "closing_date": {
                      "order": "desc"
                    }
                  }
                ],
                "_source": {
                  "includes": ["organisation.name", "organisation.slug", "organisation.logo_url", "organisation.has_logo"]
                },
                "size": 1
              }
            }
          }
        }
      }
    }
  },
  "query": {
    "bool": {
      "minimum_should_match": 1,
      "should": [
        {
          "term": {
            "country_iso3": "GBR"
          }
        },
        {
          "term": {
            "country_iso3": "SCO"
          }
        },
        {
          "term": {
            "country_iso3": "ENG"
          }
        },
        {
          "term": {
            "country_iso3": "WAL"
          }
        },
        {
          "term": {
            "country_iso3": "NIR"
          }
        }
      ]
    }
  }
}