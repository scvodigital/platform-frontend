<div class="page posts press">
    <div class="splash-image splash-image-{{data.supplimentaryResponses.page.hits.hits.[0]._type}}" style="{{> header_splash_image}}">
        <div class="splash-overlay{{#if data.supplimentaryResponses.page.hits.hits.[0]._source.hide_overlay}} splash-overlay-hidden{{/if}}">
            <div class="container-fluid">
                <div class="mdc-layout-grid">
                    {{#if data.supplimentaryResponses.page.hits.hits.[0]._source.header_text ~}}
                    <img src="{{data.supplimentaryResponses.page.hits.hits.[0]._source.header_text}}" alt="{{data.supplimentaryResponses.page.hits.hits.[0]._source.title}}" class="header-text" />
                    {{else}}
                    <h1 class="header-text">
                        <span class="header-text-banner">
                            Press &amp; media
                        </span>
                    </h1>
                    {{/if ~}}
                </div>
                {{> header_caption}}
            </div>
        </div>
    </div>
    <div class="container-fluid">
        {{> breadcrumbs_posts}}
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-8-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone content post-content">
                    {{#compare data.primaryResponse.hits.total ">" 0 ~}}
                    {{> search_info paging=data.primaryResponse.pagination}}
                    <ul class="supplimentary-list">
                        {{#each data.primaryResponse.hits.hits ~}}
                        {{{_source.rendered.scvo_list}}}
                        {{/each ~}}
                    </ul>
                    {{> pagination paging=data.primaryResponse.pagination}}
                    {{else}}
                    <p>
                        No posts by this author could be loaded.
                    </p>
                    {{/compare ~}}
                </div>
                <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone sidebar post-sidebar">
                    {{{data.supplimentaryResponses.page.hits.hits.[0]._source.rendered.scvo_full}}}
                </div>
            </div>
        </div>
    </div>
</div>
