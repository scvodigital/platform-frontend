{
	"size": 10,
    "from": {{multiply (subtract (default query.page 1) 1) 10}},
    "_source": [
        "categories",
        "categories_id",
        "categories_slug",
        "rendered.scvo_list",
        "rendered.rss"
    ],
	"query": {
        "bool": {
            "must": [
                {
                    "term": {
                        "is_press_release": false
                    }
                }
            ],
            "should": [{
                "terms": {
                    "categories_slug": [
                        "{{category_slug}}"
                    ]
                }
            }],
            "minimum_should_match": 1
        }
	},
	"sort": {
		"publish_on": "desc"
	}
}
