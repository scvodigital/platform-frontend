{
    "size": 10,
    "from": {{multiply (subtract (default request.params.query.page 1) 1) 10}},
    "_source": [
        "author",
        "author_sfid",
        "author_name_full",
        "categories",
        "categories_id",
        "categories_slug",
        "rendered.scvo_list"
    ],
    "query": {
        "bool": {
            "must": [
                {
                    "term": {
                        "author_slug": "{{request.params.author_slug}}"
                    }
                },
                {
                    "term": {
                        "is_press_release": false
                    }
                }
            ]
        }

    },
    "sort": {
        "publish_on": "desc"
    }
}
