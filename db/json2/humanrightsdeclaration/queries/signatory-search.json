{
    "size": 16,
    "from": {{multiply (subtract (default query.page 1) 1) 16}},
    "_source": [
        "slug",
        "title",
        "rendered.humanrightsdeclaration_search_result"
    ],
    "query": {
        "bool": {
            "must": [
            {{#if query.q}}
                {
                    "query_string": {
                        "query": "{{query.q}}",
                        "default_operator": "AND",
                        "analyzer": "snowball"
                    }
                }
            {{/if}}
            ]
        }
    },
    "sort": {
        {{#if query.sort}}"slug": "asc"{{else}}"date_signed": "desc"{{/if}}
    }
}
